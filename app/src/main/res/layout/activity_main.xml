<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#C5E1A5"
        tools:context="com.example.android.redcurryrestaurant.MainActivity">
        <TextView
            style= "@style/TopTextStyle"
            android:text="Red Curry"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#E65100"/>
        <TextView
            style= "@style/TopTextStyle"
            android:text="Bangladeshi cuisine at a very reasonable price"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:id="@+id/deshi3_food_image_view"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/deshi3_food" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:text="Contact info" />
                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_gravity="center" />

                <TextView
                    style="@style/DetailTextStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="10dp"
                    android:text="Phone no. 012345678" />

                <TextView
                    style="@style/DetailTextStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="Website : www.redcurry.com" />

                <TextView
                    style="@style/HeaderTextStyle"
                    android:text="Address" />
                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_gravity="center" />
                <TextView
                    style="@style/DetailTextStyle"
                    android:paddingLeft="12dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:text="215, tidlane, parkway" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:text="Opening hours:" />
                <View
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_gravity="center" />
                <TextView
                    style="@style/DetailTextStyle"
                    android:padding="4dp"
                    android:text="Everyday 11am to 10pm" />
                <TextView
                    style="@style/DetailTextStyle"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="10dp"
                    android:text="** Delicious lunch, snacks and dinner with pure Bangladeshi taste" />
                <TextView
                    style="@style/DetailTextStyle"
                    android:padding="4dp"
                    android:text="** 15% discount for students" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context="com.example.android.redcurryrestaurant.MainActivity">
            <Button
                style="@style/ButtonTextStyle"
                android:layout_alignParentLeft="true"
                android:text="Menu"/>
            <Button
                style="@style/ButtonTextStyle"
                android:layout_centerHorizontal="true"
                android:text="Home delivery"/>

            <Button
                style="@style/ButtonTextStyle"
                android:layout_alignParentRight="true"
                android:text="Booking"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
